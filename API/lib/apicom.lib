		# Affichage de sa syntaxe   
		if [[ $(cat ${lib} | grep -w "${num_funct}) Syntax" | sed 's/^.....//g' | cut -c1) != " " ]]
		then
			syntax_funct=$(cat ${lib} | grep -w "${num_funct}) Syntax" | sed 's/^.....//g')
			echo "${syntax_funct}"
		else
			syntax_funct=$(cat ${lib} | grep -w "${num_funct}) Syntax" | sed 's/^......//g')
