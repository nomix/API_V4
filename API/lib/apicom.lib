		then
			man_para_funct=$(cat ${lib} | grep -w "${num_funct}) Mandatories Parameters" | sed 's/^.....//g')
			echo "${man_para_funct}"
		else
			man_para_funct=$(cat ${lib} | grep -w "${num_funct}) Mandatories Parameters" | sed 's/^......//g')
			echo "${man_para_funct}"
		fi

		# Affichage des exemples    
